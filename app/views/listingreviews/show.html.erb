<div class="page-header">
  <h3>Listingreview #<%= @listingreview.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @listingreview.user.present? %>
          <a href="/users/<%= @listingreview.user_id %>">
            <%= @listingreview.user.first_name %>
          </a>
        <% end %>
      </dd>

      <dt>Accuracy</dt>
      <dd><%= @listingreview.accuracy %></dd>

      <dt>Communication</dt>
      <dd><%= @listingreview.communication %></dd>

      <dt>Cleanliness</dt>
      <dd><%= @listingreview.cleanliness %></dd>

      <dt>Location</dt>
      <dd><%= @listingreview.location %></dd>

      <dt>Check in</dt>
      <dd><%= @listingreview.check_in %></dd>

      <dt>Value</dt>
      <dd><%= @listingreview.value %></dd>

      <dt>Content</dt>
      <dd><%= @listingreview.content %></dd>

      <dt>Listing</dt>
      <dd>
        <% if @listingreview.listing.present? %>
          <a href="/listings/<%= @listingreview.listing_id %>">
            <%= @listingreview.listing.title %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/listingreviews" class="btn btn-primary">
        Back
      </a>
      <a href="/listingreviews/<%= @listingreview.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_listingreview/<%= @listingreview.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
