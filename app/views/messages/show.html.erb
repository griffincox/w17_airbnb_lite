<div class="page-header">
  <h3>Message #<%= @message.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>To</dt>
      <dd>
        <% if @message.to.present? %>
          <a href="/users/<%= @message.to_id %>">
            <%= @message.to.first_name %>
          </a>
        <% end %>
      </dd>

      <dt>Subject</dt>
      <dd><%= @message.subject %></dd>

      <dt>Content</dt>
      <dd><%= @message.content %></dd>

      <dt>From</dt>
      <dd>
        <% if @message.from.present? %>
          <a href="/users/<%= @message.from_id %>">
            <%= @message.from.first_name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/messages" class="btn btn-primary">
        Back
      </a>
      <a href="/messages/<%= @message.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_message/<%= @message.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
